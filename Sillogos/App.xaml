<Application x:Class="Sillogos.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Sillogos.Views"
             xmlns:vm="clr-namespace:Sillogos.ViewModels"
             xmlns:converters="clr-namespace:Sillogos.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>

                    <ControlTemplate x:Key="ValidationTemplate">
                        <DockPanel>
                            <TextBlock Foreground="Red" FontSize="20">!</TextBlock>
                            <AdornedElementPlaceholder />
                        </DockPanel>
                    </ControlTemplate>
                </ResourceDictionary>

                <ResourceDictionary Source="Themes/BorderStyle.xaml" />
                <ResourceDictionary Source="Themes/ButtonStyle.xaml" />
                <ResourceDictionary Source="Themes/ComboBoxStyle.xaml" />
                <ResourceDictionary Source="Themes/DataGridStyle.xaml" />
                <ResourceDictionary Source="Themes/DatePickerStyle.xaml" />
                <!--<ResourceDictionary Source="Themes/ImageStyle.xaml"/>-->
                <ResourceDictionary Source="Themes/LabelStyle.xaml" />
                <ResourceDictionary Source="Themes/MenuStyle.xaml" />
                <ResourceDictionary Source="Themes/Styles.xaml" />
                <ResourceDictionary Source="Themes/TextBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
